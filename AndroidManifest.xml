<manifest 
    xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.banasiak.coinfliphd" 
    android:versionName="5.0.2.HD" android:versionCode="2"
    android:installLocation="auto" >
    
    <uses-permission android:name="android.permission.VIBRATE" />
    <uses-sdk android:targetSdkVersion="11" android:minSdkVersion="11" />
    
    <supports-screens 
        android:smallScreens="false"
        android:normalScreens="false"
        android:largeScreens="true"
        android:xlargeScreens="true" >
    </supports-screens>
    
    <application 
        android:icon="@drawable/icon" 
        android:label="@string/app_name"
        android:hardwareAccelerated="true" 
        android:largeHeap="true">
        <activity 
            android:name=".CoinFlip" 
            android:label="@string/app_name" 
            android:screenOrientation="landscape" >
            <intent-filter>
                <action 
                    android:name="android.intent.action.MAIN" />
                <category 
                    android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".Settings" 
            android:label="@string/settings_activity_title" 
            android:screenOrientation="landscape" >
        </activity>        
        <activity 
            android:name=".SelfTest" 
            android:label="@string/selftest_activity_title"
            android:theme="@android:style/Theme.Dialog" 
            android:screenOrientation="landscape" >
        </activity>
        <activity 
            android:name=".About" 
            android:label="@string/about_activity_title"
            android:theme="@android:style/Theme.Dialog" 
            android:screenOrientation="landscape" >
        </activity>
    </application>

</manifest> 